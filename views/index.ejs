<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="consumo.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
    <title><%= title %></title>
  </head>
  <body>
    <div>
      <form id="form_validate" method='GET' action='/validate'>
        <div class="form-group">
          <label for="dni" id="label_dni">INTRODUCE TU DNI</label>
          <input type="string" placeholder=<%= dni %> class="form-control" id="dni" name="dni" value=<%= dni %>>
        </div>
        <input type="submit" class="btn btn-primary" id="button_validate" value="Consultar DNI" />
      </form>
    </div>
    <div class="container" id="tickets_title">
      <div class="row">
        <div class="col-sm">Bono</div>
        <div class="col-sm">Sesiones disponibles</div>
        <div class="col-sm">#</div>
      </div>
    </div>
    <br>
    <div class="container" id="tickets">
      <% for(var i = 0; i < items.length; i++) { %>
      <div class="row">
        <div class="col-sm"><%= items[i].name %></div>
        <div class="col-sm"><%= items[i].quantity %></div>
        <!--<div class="col-sm"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#consumeModal">Consumir</button></div>-->
        <div class="col-sm"><a href="/consume/<%= items[i].id %>/<%= items[i].quantity %>" class="btn btn-primary">Consumir</a></div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="consumeModal" tabindex="-1" role="dialog" aria-labelledby="consumeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="consumeModalLabel">Consumir bono</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>¿Desea descontar una sesión? Se descontará definitivamente. </p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
              <a href="/consume/<%= items[i].id %>/<%= items[i].quantity %>" class="btn btn-primary">Consumir definitivamente</a>
            </div>
          </div>
        </div>
      </div>
      <br>
      <% } %>
    </div>
    
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </body>
</html>
